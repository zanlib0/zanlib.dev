---
import type { Post } from '../../utils/types';
import BaseHead from '../BaseHead.astro';
import Footer from '../Footer.astro';
import Header from '../Header.astro';
import FilterCheckbox from '../FilterCheckbox.astro';

import Article from './post-types/Article.astro';
import Note from './post-types/Note.astro';
import Jot from './post-types/Jot.astro';

interface Props {
	posts: Post[];
	t: {
		lang: 'en' | 'pl';
		readText: string;
		articles: string,
		notes: string,
		jots: string,
		navLinks: {
			articles: string;
			projects: string;
			about: string;
		};
	};
}

const { posts, t } = Astro.props;
---

<!doctype html>
<html lang={t.lang}>
	<head>
		<BaseHead />
	</head>
	<body>
		<Header active="blog" navLinks={t.navLinks} />
		<main>
			<div class="filters">
				<FilterCheckbox label={t.articles} value="articles" />
				<FilterCheckbox label={t.notes} value="notes" />
				<FilterCheckbox label={t.jots} value="jots" />
			</div>
			<section>
				<ul>
					{posts.map((post) => {
						if (post.collection === 'articles') {
							return (
								<Article
									lang={t.lang}
									id={post.id}
									pubDate={post.data.pubDate}
									readText={t.readText}
									title={post.data.title}
									description={post.data.description}
								/>
							)
						}

						if (post.collection === 'notes') {
							return (
								<Note
									lang={t.lang}
									id={post.id}
									pubDate={post.data.pubDate}
									title={post.data.title}
								/>
							)
						}

						if (post.collection === 'jots') {
							return (
								<Jot
									lang={t.lang}
									id={post.id}
									pubDate={post.data.pubDate}
									body={post.body}
								/>
							)
						}
					})}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<script>
	// Get all filter checkboxes and post items
	const filterCheckboxes = document.querySelectorAll<HTMLInputElement>('input[name="post-filter"]');
	const postItems = document.querySelectorAll<HTMLLIElement>('section ul li[data-collection]');

	function applyFilters() {
		// Get all checked filter types
		const checkedFilters = Array.from(filterCheckboxes)
			.filter(checkbox => checkbox.checked)
			.map(checkbox => checkbox.dataset.filterType);

		// If no filters are checked, show all posts
		if (checkedFilters.length === 0) {
			postItems.forEach(post => {
				post.style.display = '';
			});
			return;
		}

		// Otherwise, show only posts that match checked filters
		postItems.forEach(post => {
			const postCollection = post.dataset.collection;
			if (checkedFilters.includes(postCollection)) {
				post.style.display = '';
			} else {
				post.style.display = 'none';
			}
		});
	}

	// Add event listeners to all checkboxes
	filterCheckboxes.forEach(checkbox => {
		checkbox.addEventListener('change', applyFilters);
	});
</script>

<style>
main {
	padding: 2rem 0;
}

ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.filters {
	margin-bottom: 1rem;
	display: flex;
	gap: 1rem;
}
</style>
