---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const currentLocale = Astro.currentLocale || 'en';
const localeForDateFormat = currentLocale === 'pl' ? 'pl' : 'en-uk';
---

<time datetime={date.toISOString()} class="date">
	{
		date.toLocaleDateString(localeForDateFormat, {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
