---
import { render } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { collectPosts, postExistsInLanguage } from '../../../utils/collectPosts';
import { getNavLinks } from '../../../i18n/ui';
import type { Post } from '../../../utils/types';

export async function getStaticPaths() {
	const posts = await collectPosts('en');

	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

type Props = Post

const post = Astro.props;
const { Content } = await render(post);

// Check if this post has a Polish translation
const translationAvailable = await postExistsInLanguage(post.id, 'pl');

const t = {
	lastUpdatedText: 'upd.',
	navLinks: getNavLinks('en'),
};
---

<BlogPost
	collection={post.collection}
	{...post.data}
	{t}
	slug={post.id}
	{translationAvailable}
>
	<Content />
</BlogPost>
