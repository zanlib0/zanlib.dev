---
import ArrowRight from '../components/icons/ArrowRight.astro';

import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

import '../styles/index.css';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="photo-column">
				<figure>
					<img src="/selfie.jpg" alt="Portrait" id="portrait" />
					<figcaption>Portrait.</figcaption>
				</figure>
			</div>

			<div class="column">
				<h2>Marek Chotoborski</h2>
				<h5 class="subtitle">Product Engineer & Digital Craftsman</h5>

				<hr class="brand" />

				<p>
					Crafting web applications that matter. JavaScript, React, and Elixir specialist
					focused on understanding what people actually need, not just what they want.
				</p>

				<p>
					Building software that honours both human judgment and technical excellence.
					Writing about product development, remote work, and the craft behind systems
					that last. Based in Silesia, working globally.
				</p>

				<div class="services">
					<h5>Services</h5>
					<ul>
						<li>Web application development</li>
						<li>Business and technical consulting</li>
						<li>Virtual and in-person trainings</li>
						<li>Conference speaking</li>
					</ul>
				</div>

				<hr class="subtle" />

				<div class="email-block">
					<h6>Get in touch</h6>
					<div class="email">
						<ArrowRight size="0.9rem" />
						<span>hello@zanlib.dev</span>
					</div>
				</div>

				<a href="/blog" class="link">Read Articles <ArrowRight size="0.9rem" /></a>
			</div>
		</main>
		<Footer />
	</body>
</html>
